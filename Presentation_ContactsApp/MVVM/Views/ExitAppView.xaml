<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Presentation_ContactsApp.MVVM.Views.ExitAppView"
             Title="ExitAppView">

    <Grid  VerticalOptions="Center" HorizontalOptions="Center" RowDefinitions="auto, auto" ColumnDefinitions="auto, auto">
        <Label Text="Are you sure you want to exit the application?" FontSize="Medium" FontAttributes="Bold" Grid.Row="0" Grid.ColumnSpan="2" Margin="0, 20"/>
        <Button Text="Yes" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" Margin="20,0" Clicked="ExitApp"/>
        <Button Text="No" FontAttributes="Bold" Grid.Row="1" Grid.Column="1" Margin="20,0" Clicked="NavToMainMenu"/>
    </Grid>
    
    
</ContentPage>